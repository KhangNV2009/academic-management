@model IEnumerable<AcademicManagement.Models.Course>

@{
    ViewData["Title"] = "Courses Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="margin-horizontal">
    <a class="link-secondary bold h4" asp-action="Index" asp-controller="Trainers">Trainer</a>
    <a class="link-secondary bold margin-left h4" asp-action="Index" asp-controller="Trainees">Trainee</a>
    <a class="link-primary bold margin-left h4" asp-action="Index" asp-controller="Courses">Course</a>
</div>

<div class="margin-horizontal">
    <a class="link-secondary bold h5" asp-action="Index" asp-controller="Topics">Topics</a>
    <a class="link-secondary bold margin-left h5" asp-action="Index" asp-controller="Categories">Categories</a>
</div>

<div class="container-lg">
    <h1>Courses Page</h1>
    <div class="search_add">
        <a asp-action="Create">Create new a course</a>
        <form class="d-flex" method="get" asp-action="Index" asp-controller="Courses">
            <input class="form-control me-2" type="search" name="name" placeholder="Search" aria-label="Search">
            <input class="btn btn-outline-success" type="submit" />
        </form>
    </div>
    @foreach (Course item in Model)
    {
        <div class="shadow-sm course-border p-5 mt-3">
            <div class="name_course_X">
                <div class="name_course">
                    <div class="name_course_icon_1">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M3 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 7.586 1H3zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                <path d="M1 7.086a1 1 0 0 0 .293.707L8.75 15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1v5.086z" />
                            </svg>
                        </a>
                    </div>
                    <h3>@item.Name</h3>
                    <div class="name_course_icon_2">
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                            </svg>
                        </a>
                    </div>
                </div>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="23" height="25" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </a>
            </div>
            <div class="course-container">
                <div class="course-info-container">
                    @if (item.Topics != null)
                    {
                        @foreach (Topic topic in item.Topics)
                        {
                            <div class="topic-container">
                                <div>
                                    <p>Topic: @topic.Name - </p>
                                </div>
                                <div class="teacher-info-container">
                                    <div>
                                        <p>Teacher: @topic.Trainer.Name</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <p class="course-detail">@item.Description</p>
            </div>
        </div>
    }
</div>