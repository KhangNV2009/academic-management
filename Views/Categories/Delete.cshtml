
@model AcademicManagement.Models.Category
@{
    ViewData["Title"] = "Categories Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="card">
        <div class="card-body">
            <div class="modal-body row">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="Name" class="form-control pl-4" id="floatingInput" disabled>
                        <label for="floatingInput" class="ml-5">Category name</label>
                    </div>
                </div>
                <div class="">
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="Description" class="form-control pl-4" id="floatingInput" disabled>
                        <label for="floatingInput" class="ml-5">Description</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>